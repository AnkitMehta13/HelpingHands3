<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Restaurant.Res_Signup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile1"/>
        <EditText
            android:id="@+id/rname"
            android:layout_below="@+id/profile"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Restaurant Name"
            android:textColorHint="@color/graylight"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/rphoto"
            android:layout_below="@+id/profile"
            android:layout_toLeftOf="@+id/rname"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/dish"/>
        <EditText
            android:id="@+id/oname"
            android:layout_below="@+id/rname"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/graylight"
            android:layout_marginLeft="5dp"
            android:hint="Restaurant's Owner"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/own"
            android:layout_below="@id/rname"
            android:layout_toLeftOf="@+id/oname"
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:src="@drawable/user"/>
        <EditText
            android:id="@+id/res_email"
            android:layout_below="@+id/oname"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/graylight"
            android:layout_marginLeft="5dp"
            android:hint="Email Address"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/reid"
            android:layout_below="@id/own"
            android:layout_toLeftOf="@+id/res_email"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/message"/>
        <EditText
            android:id="@+id/passwrd"
            android:layout_below="@+id/res_email"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:textColorHint="@color/graylight"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Password"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/pas"
            android:layout_below="@id/reid"
            android:layout_toLeftOf="@+id/passwrd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/lock"/>
        <EditText
            android:id="@+id/mopho"
            android:layout_below="@+id/passwrd"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/graylight"
            android:layout_marginLeft="5dp"
            android:hint="Mobile Number"
            android:textSize="16sp"
            android:inputType="phone"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/pno"
            android:layout_below="@id/pas"
            android:layout_toLeftOf="@+id/mopho"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/smartphone"/>
        <EditText
            android:id="@+id/ad_res"
            android:layout_below="@+id/mopho"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/graylight"
            android:layout_marginLeft="5dp"
            android:hint="Address"
            android:textSize="16sp"
            android:inputType="textPostalAddress"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/add_res"
            android:layout_below="@id/pno"
            android:layout_toLeftOf="@+id/ad_res"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/home"/>
        <EditText
            android:id="@+id/lic_res"
            android:layout_below="@+id/ad_res"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/graylight"
            android:layout_marginLeft="5dp"
            android:hint="Food License Number"
            android:textSize="16sp"
            android:inputType="text"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/fl"
            android:layout_below="@id/ad_res"
            android:layout_toLeftOf="@+id/lic_res"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/fl"/>

        <Button
            android:id="@+id/sbtn_res"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_below="@+id/lic_res"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:background="@drawable/button"
            android:text="Signup" />
        <TextView
            android:id="@+id/txt"
            android:layout_below="@+id/sbtn_res"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Already Have an Account ?"
            android:textColor="@color/graylight"/>
    </RelativeLayout
        >
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Signup"
    android:textColorHint="@color/graylight"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_height="120dp"
            android:layout_width="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile1"/>


        <EditText

            android:id="@+id/vol_name"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Volunteer Name"
            android:textSize="16sp"
            android:textColorHint="@color/graylight"
            android:inputType="textPersonName"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/user"
            android:layout_below="@+id/profile_image"
            android:layout_toLeftOf="@+id/vol_name"
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:src="@drawable/user"/>
        <EditText
            android:textColorHint="@color/graylight"
            android:id="@+id/email"
            android:layout_below="@+id/vol_name"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Email Address"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/eid"
            android:layout_below="@id/user"
            android:layout_toLeftOf="@+id/email"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:src="@drawable/message"/>
        <EditText
            android:textColorHint="@color/graylight"
            android:id="@+id/pass"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Password"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/pas"
            android:layout_below="@id/eid"
            android:layout_toLeftOf="@+id/pass"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/lock"/>
        <EditText
            android:textColorHint="@color/graylight"
            android:id="@+id/mono"
            android:layout_below="@+id/pass"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Mobile Number"
            android:textSize="16sp"
            android:inputType="phone"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/mno"
            android:layout_below="@id/pas"
            android:layout_toLeftOf="@+id/mono"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/smartphone"/>
        <EditText
            android:id="@+id/add"
            android:textColorHint="@color/graylight"
            android:layout_below="@+id/mono"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Address"
            android:textSize="16sp"
            android:inputType="textPostalAddress"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/ad"
            android:layout_below="@id/mno"
            android:layout_toLeftOf="@+id/add"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/home"/>

        <EditText
            android:id="@+id/dob"
            android:textColorHint="@color/graylight"
            android:layout_below="@+id/add"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Birth Date"
            android:textSize="16sp"
            android:inputType="date"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/bd"
            android:layout_below="@id/ad"
            android:layout_toLeftOf="@+id/dob"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/calendar"/>
        <EditText
            android:id="@+id/lic"
            android:textColorHint="@color/graylight"
            android:layout_below="@+id/dob"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="License Number"
            android:textSize="16sp"
            android:inputType="text"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/dl"
            android:layout_below="@id/bd"
            android:layout_toLeftOf="@+id/lic"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/license"/>
        <Spinner
            android:id="@+id/gen"
            android:textColor="@color/graylight"
            android:layout_below="@+id/lic"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:prompt="@string/Gender_Prompt"
            android:entries="@array/Gender"
            android:outlineSpotShadowColor="@color/graylight"
            android:outlineAmbientShadowColor="@color/graylight">
        </Spinner>


        <ImageView
            android:id="@+id/geni"
            android:layout_below="@id/dl"
            android:layout_toLeftOf="@+id/lic"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/gender"/>
        <Button
            android:id="@+id/sbtn"
            android:layout_below="@+id/gen"
            android:layout_centerHorizontal="true"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_marginTop="55dp"
            android:text="Signup"
            android:background="@drawable/button"/>
        <TextView
            android:id="@+id/login"
            android:layout_below="@+id/sbtn"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Already Have an Account ?"
            android:textColor="@color/graylight"/>
    </RelativeLayout>
</ScrollView>
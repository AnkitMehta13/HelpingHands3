<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/startblue">

        <ImageView
            android:id="@+id/volimg_fra"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/volname"
            android:text="Volunteer Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/volimg_fra"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:text="Location"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/volimg_fra"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:text="Status"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/volimg_fra"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statusinfo"
            android:text="Accepted"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@+id/location"
            android:layout_toRightOf="@+id/status"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accepted"
            android:text="Accepted On"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/status"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accepteddate_fire"
            android:text="Date"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@id/statusinfo"
            android:layout_toRightOf="@+id/accepted"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
